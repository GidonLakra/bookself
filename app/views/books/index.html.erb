<body style="background-color:powderblue;">
<h1> Books </h1>
<%= button_to "New Book", books_newbook_path, method: :get %>
  <% Book.all.each do |book| %></p>
     <p>Title : <%= book.title %></p>
     <p>Author : <%= book.author %></p>
     <p>Description : <%= book.description %></p>
     <p>Rating : <%= book.rating %></p>
     <p>Reading Status : <%= book.reading_status %></p>
  <%= button_to "Modify", modify_books_path(book),  method: :get %>  
  <%= button_to "Delete", book,  method: :delete %>  
<hr>
<% end %>
</body>